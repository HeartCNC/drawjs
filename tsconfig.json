{
  "compilerOptions": {
    "module": "ES2015",
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "./types",
    "emitDeclarationOnly": false
  },
  "baseUrl": ".",
  "lib": [
    "es5",
    "es2015",
    "es2016",
    "es2017",
    "es2018",
    "dom"
  ],
  "include": [
    "src/**/*",
    "types/*"
  ],
  "exclude": [
    "node_modules"
  ]
}